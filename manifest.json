{
    "manifest_version": 2,
    "name": "moveNow",
    "version": "0.1",
    "description": "This forces you to workout!",
    "permissions": [
      "tabs", 
      "background",
      "alarms",
      "storage"
    ],
    "browser_action": {
      "default_title": "moveNow",      
      "default_popup": "popup.html"
     },
    "background": {
        "scripts": [
          "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
      "scripts/script.js",
      "p5.dom.min.js", 
      "p5.min.js",
      "ml5.min.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' object-src 'self'"
}
