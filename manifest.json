{
    "manifest_version": 2,
    "name": "moveNow",
    "version": "0.1",
    "description": "This forces you to workout!",
    "icons": { 
      "16": "assets/img/favicon-16.png",
      "48": "assets/img/favicon-48.png",
     "128": "assets/img/favicon-128.png"
    },
    "permissions": [
      "tabs", 
      "background",
      "alarms",
      "storage",
      "https://*/",
      "http://*/"
    ],
    "browser_action": {
      "default_title": "moveNow",      
      "default_popup": "popup.html",
      "default_icon": "assets/img/favicon.ico"
     },
     "content_scripts": [
      {
        "matches": ["http://*/"],
        "js": ["contentScript.js"]
      }
    ],
    "background": {
        "scripts": [
          "scripts/backgroundScript.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
      "scripts/canvasScript.js",
      "libraries/p5.dom.min.js", 
      "libraries//p5.min.js",
      "libraries/ml5.min.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
